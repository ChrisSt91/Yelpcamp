<% if(success && success.length) { %>
<div
	class="alert alert-success d-flex align-items-center alert-dismissible fade show mt-3"
	role="alert"
>
	<%= success %><button
		type="button"
		class="btn-close"
		data-bs-dismiss="alert"
		aria-label="Close"
	></button>
</div>
<% } %> <% if(error && error.length) { %>
<div
	class="alert alert-warning d-flex align-items-center alert-dismissible fade show mt-3"
	role="alert"
>
	<%= error %><button
		type="button"
		class="btn-close"
		data-bs-dismiss="alert"
		aria-label="Close"
	></button>
</div>
<% } %> <% if(danger && danger.length) { %>
<div
	class="alert alert-danger d-flex align-items-center alert-dismissible fade show mt-3"
	role="alert"
>
	<%= danger %><button
		type="button"
		class="btn-close"
		data-bs-dismiss="alert"
		aria-label="Close"
	></button>
</div>
<% } %>
